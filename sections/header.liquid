{% comment %}
  Header Section - SHUFFLE STORE
  Features: Logo, payment icons, navigation, cart with counter
{% endcomment %}

<header class="header" id="header">
  <div class="header__container">
    <div class="header__logo">
      <div class="header__logo-icon">S</div>
      <span class="header__logo-text">{{ section.settings.logo_text | default: 'SHUFFLE STORE' }}</span>
    </div>
    
    <div class="header__center">
      <span class="header__payment-text">{{ section.settings.text_pay | default: 'We Accept' }}</span>
      <div class="header__payment-icons">
        {% for icon in section.settings.payment_icons %}
          <div class="header__payment-icon" style="background-color: {{ icon.color }};" title="{{ icon.name }}">
            {% if icon.name == 'Visa' %}V{% elsif icon.name == 'Mastercard' %}M{% elsif icon.name == 'PayPal' %}P{% elsif icon.name == 'Bitcoin' %}₿{% elsif icon.name == 'Ethereum' %}Ξ{% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
    
    <div class="header__right">
      <nav class="header__nav">
        <a href="/collections/all" class="header__nav-link">{{ section.settings.all_products | default: 'All Products' }}</a>
        <a href="/collections" class="header__nav-link">{{ section.settings.collections | default: 'Collections' }}</a>
      </nav>
      
      <div class="header__cart" id="header-cart">
        <button class="header__cart-button" id="cart-toggle">
          <svg class="header__cart-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="m1 1 4 4 13 0 4 13H6l-2-5H1"></path>
          </svg>
          <span class="header__cart-count" id="cart-count">0</span>
        </button>
        
        <div class="header__cart-dropdown" id="cart-dropdown">
          <div class="cart-dropdown__header">
            <h3 class="cart-dropdown__title">Shopping Cart</h3>
            <button class="cart-dropdown__close" id="cart-close">×</button>
          </div>
          <div class="cart-dropdown__content" id="cart-content">
            <div class="cart-dropdown__empty" id="cart-empty">
              <p>Your cart is empty</p>
              <p>Add some products to get started!</p>
            </div>
          </div>
          <div class="cart-dropdown__footer" id="cart-footer" style="display: none;">
            <div class="cart-dropdown__total">
              <span>Total: $<span id="cart-total">0.00</span></span>
            </div>
            <button class="cart-dropdown__checkout btn btn--primary">Checkout</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    background-color: #000000;
    color: #ffffff;
    padding: 0 20px;
    height: 70px;
    display: flex;
    align-items: center;
    position: sticky;
    top: 40px;
    z-index: 999;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .header.scrolled {
    background-color: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(10px);
  }

  .header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .header__logo {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .header__logo-icon {
    width: 40px;
    height: 40px;
    background-color: #8B5CF6;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 20px;
    color: white;
  }

  .header__logo-text {
    font-size: 18px;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .header__center {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .header__payment-text {
    font-size: 14px;
    color: #ffffff;
  }

  .header__payment-icons {
    display: flex;
    gap: 8px;
  }

  .header__payment-icon {
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: bold;
    font-size: 12px;
  }

  .header__right {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .header__nav {
    display: flex;
    gap: 30px;
  }

  .header__nav-link {
    color: #ffffff;
    text-decoration: none;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
  }

  .header__nav-link:hover {
    color: #8B5CF6;
  }

  .header__cart {
    position: relative;
  }

  .header__cart-button {
    background: none;
    border: none;
    color: #ffffff;
    cursor: pointer;
    position: relative;
    padding: 8px;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .header__cart-button:hover {
    background-color: rgba(139, 92, 246, 0.1);
  }

  .header__cart-icon {
    width: 24px;
    height: 24px;
  }

  .header__cart-count {
    position: absolute;
    top: 0;
    right: 0;
    background-color: #8B5CF6;
    color: white;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    font-weight: bold;
    transform: translate(25%, -25%);
  }

  .header__cart-dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    background-color: #000000;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    min-width: 350px;
    max-height: 400px;
    overflow-y: auto;
    display: none;
    z-index: 1000;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  }

  .header__cart-dropdown.active {
    display: block;
  }

  .cart-dropdown__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .cart-dropdown__title {
    margin: 0;
    font-size: 18px;
    font-weight: bold;
  }

  .cart-dropdown__close {
    background: none;
    border: none;
    color: #ffffff;
    font-size: 24px;
    cursor: pointer;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cart-dropdown__content {
    padding: 20px;
  }

  .cart-dropdown__empty {
    text-align: center;
    color: #666;
    padding: 40px 20px;
  }

  .cart-dropdown__footer {
    padding: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .cart-dropdown__total {
    font-size: 18px;
    font-weight: bold;
    margin-bottom: 15px;
    text-align: center;
  }

  .cart-dropdown__checkout {
    width: 100%;
  }

  @media (max-width: 768px) {
    .header__center {
      display: none;
    }
    
    .header__nav {
      gap: 15px;
    }
    
    .header__nav-link {
      font-size: 14px;
    }
  }
</style>